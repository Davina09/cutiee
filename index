<script>
  const mainVideo = document.getElementById("mainVideo");
  const playBtn = document.querySelector(".play-btn");
  const detailContainer = document.getElementById("detailContainer");
  const detailVideo = document.getElementById("detailVideo");
  const detailTitle = document.getElementById("detailTitle");
  const detailAbout = document.getElementById("detailAbout");
  const detailTime = document.getElementById("detailTime");
  const detailJam = document.getElementById('detailJam');
  const detailPlace = document.getElementById("detailPlace");
  const thumbs = document.querySelectorAll(".video-thumb");

  thumbs.forEach(video => {
    video.addEventListener("mouseenter", () => {
      mainVideo.pause();
      thumbs.forEach(v => { v.pause(); v.currentTime=0; v.classList.remove("active"); v.muted=true; });
      video.classList.add("active"); video.muted=false; video.play();
    });
    video.addEventListener("mouseleave", () => { video.pause(); video.currentTime=0; video.classList.remove("active"); video.muted=true; });
    video.addEventListener("click", () => {
      detailVideo.src = video.src;
      detailTitle.textContent = video.dataset.title;
      detailAbout.textContent = video.dataset.about;
      detailTime.textContent = video.dataset.time;
      detailJam.textContent = video.dataset.jam;
      detailPlace.innerHTML = video.dataset.place;
      detailContainer.style.display = "flex";
      detailVideo.play();
    });
  });

  function closeDetail() {
    detailVideo.pause();
    detailContainer.style.display = "none";
  }
  function togglePlay(){
    thumbs.forEach(v=>{ v.pause(); v.currentTime=0; v.classList.remove("active"); v.muted=true; });
    if(mainVideo.paused){ mainVideo.muted=false; mainVideo.play(); playBtn.textContent="❚❚ Pause"; }
    else{ mainVideo.pause(); playBtn.textContent="▶ Play"; }
  }
  function showMainDetail(){
    detailVideo.src = mainVideo.src;
    detailTitle.textContent = "Night Drive";
    detailAbout.textContent = "Journey back home through the city at night.";
    detailTime.textContent = "Kamis, 31 Juli 2025";
    detailJam.textContent = "08:03 WIB";
    detailPlace.innerHTML = '<a href="https://www.google.com/maps/place/3%C2%B037\'54.5%22S+103%C2%B046\'32.5%22E/@-3.6318,103.7731251,17z" target="_blank">Link Maps</a>';
    detailContainer.style.display = "flex";
    detailVideo.play();
}

</script>
